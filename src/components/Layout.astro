---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="TubeGist - YouTube Video Summarizer with newspaper-style presentation" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&family=Source+Sans+3:wght@300;400;600&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--color-text: #2c3e50;
		--color-text-light: #7f8c8d;
		--color-accent: #c0392b;
		--color-border: #ecf0f1;
		--color-bg: #ffffff;
		--color-bg-light: #f8f9fa;
		--font-serif: 'Libre Baskerville', Georgia, serif;
		--font-display: 'Playfair Display', Georgia, serif;
		--font-sans: 'Source Sans 3', Helvetica, Arial, sans-serif;
	}

	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	body {
		font-family: var(--font-serif);
		font-size: 16px;
		line-height: 1.6;
		color: var(--color-text);
		background-color: var(--color-bg);
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 20px;
	}

	.container {
		max-width: 800px;
		margin: 0 auto;
		padding: 40px 0;
	}

	/* Header Styles */
	.masthead {
		text-align: center;
		border-bottom: 3px double var(--color-border);
		padding-bottom: 30px;
		margin-bottom: 50px;
	}

	.masthead h1 {
		font-family: var(--font-display);
		font-size: 3.5rem;
		font-weight: 700;
		letter-spacing: -1px;
		margin-bottom: 10px;
		color: var(--color-accent);
	}

	.tagline {
		font-family: var(--font-sans);
		font-size: 1.1rem;
		font-style: italic;
		color: var(--color-text-light);
		font-weight: 300;
	}

	/* Form Styles */
	.input-section {
		background-color: var(--color-bg-light);
		border: 1px solid var(--color-border);
		padding: 30px;
		margin-bottom: 50px;
		border-radius: 2px;
	}

	.url-form {
		max-width: 500px;
		margin: 0 auto;
	}

	.form-group {
		margin-bottom: 20px;
	}

	label {
		font-family: var(--font-sans);
		font-weight: 600;
		font-size: 0.9rem;
		color: var(--color-text);
		text-transform: uppercase;
		letter-spacing: 0.5px;
		display: block;
		margin-bottom: 8px;
	}

	input[type="url"] {
		width: 100%;
		padding: 12px 16px;
		font-family: var(--font-sans);
		font-size: 1rem;
		border: 2px solid var(--color-border);
		border-radius: 2px;
		transition: border-color 0.2s;
	}

	input[type="url"]:focus {
		outline: none;
		border-color: var(--color-accent);
	}

	.submit-btn {
		width: 100%;
		padding: 15px;
		font-family: var(--font-sans);
		font-size: 1.1rem;
		font-weight: 600;
		color: white;
		background-color: var(--color-accent);
		border: none;
		border-radius: 2px;
		cursor: pointer;
		transition: background-color 0.2s;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.submit-btn:hover:not(:disabled) {
		background-color: #a93226;
	}

	.submit-btn:disabled {
		background-color: var(--color-text-light);
		cursor: not-allowed;
	}

	/* Summary Article Styles */
	.summary-section {
		margin-bottom: 60px;
	}

	.summary-article {
		background-color: white;
		border: 1px solid var(--color-border);
		padding: 40px;
		box-shadow: 0 2px 8px rgba(0,0,0,0.1);
	}

	.article-header {
		border-bottom: 1px solid var(--color-border);
		padding-bottom: 20px;
		margin-bottom: 30px;
	}

	.headline {
		font-family: var(--font-display);
		font-size: 2.2rem;
		font-weight: 700;
		line-height: 1.2;
		margin-bottom: 15px;
		color: var(--color-text);
	}

	.article-meta {
		font-family: var(--font-sans);
		font-size: 0.85rem;
		color: var(--color-text-light);
		text-transform: uppercase;
		letter-spacing: 1px;
	}

	.article-body {
		font-size: 1.1rem;
		line-height: 1.8;
	}

	.article-body h3 {
		font-family: var(--font-display);
		font-size: 1.4rem;
		margin: 30px 0 15px 0;
		color: var(--color-text);
	}

	.article-body ul {
		margin: 20px 0;
		padding-left: 30px;
	}

	.article-body li {
		margin-bottom: 8px;
	}

	/* History Styles */
	.history-section h2 {
		font-family: var(--font-display);
		font-size: 1.8rem;
		margin-bottom: 25px;
		border-bottom: 1px solid var(--color-border);
		padding-bottom: 10px;
	}

	.history-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 20px;
	}

	.history-item {
		background-color: var(--color-bg-light);
		border: 1px solid var(--color-border);
		padding: 20px;
		cursor: pointer;
		transition: all 0.2s;
		border-radius: 2px;
	}

	.history-item:hover {
		background-color: white;
		box-shadow: 0 2px 8px rgba(0,0,0,0.1);
		transform: translateY(-1px);
	}

	.history-title {
		font-family: var(--font-display);
		font-size: 1.1rem;
		font-weight: 700;
		margin-bottom: 8px;
		color: var(--color-text);
		line-height: 1.3;
	}

	.history-date {
		font-family: var(--font-sans);
		font-size: 0.8rem;
		color: var(--color-text-light);
		text-transform: uppercase;
		letter-spacing: 0.5px;
		margin-bottom: 10px;
	}

	.history-excerpt {
		font-size: 0.9rem;
		line-height: 1.5;
		color: var(--color-text-light);
	}

	.loading, .empty, .error {
		text-align: center;
		font-family: var(--font-sans);
		color: var(--color-text-light);
		font-style: italic;
		grid-column: 1 / -1;
		padding: 40px;
	}

	/* Responsive */
	@media (max-width: 768px) {
		.container {
			padding: 20px 0;
		}

		.masthead h1 {
			font-size: 2.5rem;
		}

		.input-section {
			padding: 20px;
		}

		.summary-article {
			padding: 25px;
		}

		.headline {
			font-size: 1.8rem;
		}

		.history-grid {
			grid-template-columns: 1fr;
		}
	}
</style>